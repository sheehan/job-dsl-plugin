<div class="detail">
    <div class="method-detail">
        <h2>
            {{plugin.title}}

            <a href="{{plugin.wiki}}"><span class="glyphicon glyphicon-new-window"></span> Wiki</a></h2>
        </h2>
        <div class="method-doc">{{{plugin.excerpt}}}</div>

        <h3>DSL Methods</h3>
        <table class="table table-condensed methods">
            {{#each usages}}
                <tr>
                    <td class="method-name {{#if method.deprecated}}deprecated{{/if}}">
                        <a href="#method/{{context.type}}.{{method.name}}" title="{{method.name}}">{{method.name}}</a>
                        : {{context.simpleClassName}}
                    </td>
                    <td class="method-comment" title="{{method.firstSentenceCommentText}}">{{method.firstSentenceCommentText}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
</div>